                      span Подробнее
                      .link-arrow
                        include icons/__icon-arrow.pug
                .offer-card.col-2.col-ph-3.col-tab-3.col-display-3
                    .icon-container
                      .icon-container
                        include icons/__icon-invest.pug
                    .header-03= self.htmlWebpackPlugin.options.data.content.offers.offer_03.title
                    p= self.htmlWebpackPlugin.options.data.content.offers.offer_03.lead
                    a.link(href= self.htmlWebpackPlugin.options.data.content.offers.offer_03.url, target="_blank")
                      span Подробнее
                      .link-arrow
                        include icons/__icon-arrow.pug
                .offer-card.col-2.col-ph-3.col-tab-3.col-display-3
                    .icon-container
                      .icon-container
                        include icons/__icon-yacht.pug
                    .header-03= self.htmlWebpackPlugin.options.data.content.offers.offer_04.title
                    p= self.htmlWebpackPlugin.options.data.content.offers.offer_04.lead
